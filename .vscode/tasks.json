{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "rsync",
			"command": "rsync",
			"args": [
				"-aRv",
				"--delete",
				"./",
				"pi@raspberrypi.local:/home/pi/${workspaceFolderBasename}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "none",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "Cross-compile",
			"command": "/usr/bin/arm-linux-gnueabihf-g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "コンパイラ: /usr/bin/arm-linux-gnueabihf-g++"
		},
		{
			"type": "shell",
			"label": "start gdbserver",
			"command": "ssh",
			"args": [
				"pi@raspberrypi.local",
				"gdbserver",
				"localhost:10000",
				"${workspaceFolderBasename}/${relativeFileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": [
					{
						"regexp": ".",
						"file": 1,
						"location": 2,
						"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Process*",
					"endsPattern": "^.*Listening*"
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel":"shared",
				"showReuseMessage": true,
				"clear": false,
			}
		},
		{
			"type": "shell",
			"label": "build_tasks",
			"dependsOn": [
				"Cross-compile",
				"rsync"
			],
			"dependsOrder": "sequence",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "start debug",
			"dependsOn": [
				"Cross-compile",
				"rsync",
				"start gdbserver"
			],
			"dependsOrder": "sequence"
		}
	]
}